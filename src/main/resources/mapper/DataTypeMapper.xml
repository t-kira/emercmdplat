<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kira.emercmdplat.mapper.DataTypeMapper">
    <resultMap id="BaseResultMap" type="com.kira.emercmdplat.pojo.DataType">
        <id column="d_id" property="id" jdbcType="INTEGER"/>
        <result column="d_name" property="name" jdbcType="VARCHAR"/>
        <result column="d_type" property="type" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
    d_id, d_name, d_type
  	</sql>
    <sql id="Basic_Conditions">
        <![CDATA[where 1=1 ]]>
        <if test="id != null">
            and d_id = #{id,jdbcType=INTEGER}
        </if>
        <if test="name != null">
            and d_name = #{name,jdbcType=VARCHAR}
        </if>
        <if test="type != null">
            and d_type = #{type,jdbcType=INTEGER}
        </if>
    </sql>
    <insert id="insert" parameterType="com.kira.emercmdplat.pojo.EmergencyCase">
    insert into data_type (d_id, d_name, d_type)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{type,jdbcType=INTEGER})
  	</insert>
    <update id="delete" parameterType="com.kira.emercmdplat.pojo.EmergencyCase">
    DELETE from data_type
    where d_id = #{id,jdbcType=INTEGER}
  	</update>
    <update id="update" parameterType="com.kira.emercmdplat.pojo.EmergencyCase">
        update data_type
        <set>
            <if test="name != null">
                d_name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="type != null">
                d_type = #{type,jdbcType=INTEGER},
            </if>
        </set>
        where d_id = #{id,jdbcType=INTEGER}
    </update>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from data_type
        where d_id = #{id,jdbcType=INTEGER}
    </select>

    <select id="queryForAll" resultMap="BaseResultMap" parameterType="com.kira.emercmdplat.pojo.EmergencyCase">
        select
        <include refid="Base_Column_List"/>
        from data_type
        <include refid="Basic_Conditions"/>
    </select>

    <select id="queryForPage" resultMap="BaseResultMap" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from data_type
        <include refid="Basic_Conditions"/>
        limit ${index}, ${pageSize}
    </select>

    <select id="queryForCounts" resultType="java.lang.Long" parameterType="com.kira.emercmdplat.pojo.EmergencyCase">
        select count(d_id)
        from data_type
        <include refid="Basic_Conditions"/>
    </select>

</mapper>